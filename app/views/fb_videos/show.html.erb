
<div class="vtag_video wrapper">
		<div id="fb_banner_slider">
			<div id="title-video">
					<h1><%= @video.title %></h1>
					<div class="fb-uploader-info"> <!--option for a plus image to add to fav-->
						<a href="/users/<%= @user.id %>/videos">by : <%= @user.nick %></a>
					</div>
			  </div>
			   <div class="video-slider">
				                    <!--<a href="<%= @video.video_file.url %>" style="display:block;width:629px;height:353px;" id="player"></a>
									<script language="JavaScript">
										flowplayer("player", "/flowplayer.swf", {
				                            clip: {
				                            scaling: "fit"
				                           }
				                        });
									</script>-->
				                    <div class="video-wrap">
				                        <video width="629" height="353" src="<%= @video.video_file.url %>" type="video/flv"
				                               id="player1" poster="mediaelement/media/echo-hereweare.jpg"
				                               controls="controls" preload="metadata" data-cuts="C:\ISoftware\DREAMLINE-viewer\cuts-data.json">
				                        </video>
				                        <!--img src="crocodile-logo.png" class="logo" title="logo example"/-->
				                    </div>
				  </div>
					
			</div><!-- banner slider -->		
			<div class="fb_panel-video">
					
						<textarea rows="" cols=""><%= "http://www.vtago#{@video.uri}" %></textarea>
						<!--label><input type="checkbox" />Short URL</label-->
			
				<div class="fb_panel-right"><h3><span>views</span><strong>81,387,378</strong> </h3></div>	
			</div>
			
		
			<div id="fb_in_this_video">
						<% if @video.description != "" %>
							<h2>Description:</h2>
							<div> <%= @video.description %></div>
						<% end %>
					<h2>In this video:</h2>
					<div id="tagged">
					<% @video.video_taggees_uniq.each do |taggee| %>
						<% if taggee.contact_info != "" %>
							<% href = "href=#{FacebookHelper::FACEBOOK_URL}/#{taggee.fb_id}" if taggee.fb_id %>
							<a <%= href %>><%= taggee.contact_info %></a>
							<% end %>
							<% end %>
						</div>
					</br>
		 </div>
		<div class="fb_panel-video">
				<div class="fb_panel-left">
				<ul>
					<!--li><a href="#" class="panl-1">Recommand</a></li-->
					<li><a class="panl-2" onclick="<%= signed_in? ? 'show_comment_form();' : 'alert("You must be logged in for adding a comment");' %>">Comment</a></li>
					<% if @own_videos %>
					<li><a href="/video/<%= @video.id %>/edit" class="panl-4">Edit Video</a></li>
					<li><a href="/video/<%= @video.id %>/edit_tags" class="panl-4">Edit Tags</a></li>
					<% end %>
				<!--li><a href="#" class="panl-5">Flag</a></li-->
				</ul>
			</div>
		</div>
		<div style="clear:both"></div>
		<%#= render :partial => "comments/comment_form" %>	
				<div id="fb_updated">
					Uploaded by <a href="#"><%=@user.nick %></a> on <%= @video.created_at.strftime("%b %d, %Y, %I:%m %p") %>
					| Category: <a href="<%= @video.category_uri %>"><%= @video.category_title %></a>	
				</div>

</div>		