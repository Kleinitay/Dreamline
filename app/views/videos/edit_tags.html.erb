<head>
	<title>VtagO - <%= @page_title %></title>
</head>
<body>
	<div id="content_sec">
		<div id="left_content">
			<%= form_for :video, :url => video_path(@video), :html => { :method => 'put' } do |f| %>
				<div id="video_taggees">
					<% @video.video_taggees.each do |video_taggee| %>
						<%= render :partial => 'video_taggees/video_taggee', :locals => { :video_taggee => video_taggee } %>
					<% end %>
					<!--p><%#= add_taggee_link "Add a new tag" %></p-->
				</div>
				<%#= render :partial => "video_taggees/facebook_friends" %>
				<br class="clear" />
				<div>
					<p><input type="submit" onclick = "update_form_fb_ids();" value="Update video" name="commit"></p>
				</div>
			<% end %>
		</div>
		<div id="right_content">
			<%= render :partial => "sidebars/single_video_sidebar" %>
		</div>
	</div>
</body>

<script type="text/javascript">
	var friends_hash = <%= raw @friends.to_json %>;
	function update_fb_ids(){
		var contacts = document.getElementsByClassName("contact_info");
		contacts.each (function(contact) {
			fb_id_field = document.getElementsByClassName("contact_info")[0].nextElementSibling
			fb_id_field.value = friends_hash[contact.value];
		});
  }
</script>